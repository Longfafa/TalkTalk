.content-item {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
}

.item-image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

.word {
  font-size: 30rpx;
  margin-left: 30rpx;
}

.chat-container{
  margin-top: 20rpx;
}

.chat-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  background: white;
  align-items: center;
}

.item-left image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.item-right{
  display: flex;
  flex-direction: column;
}

.item-name{
  line-height: 42rpx;
}

.item-message{
  margin-left: 20rpx;
  color: #cdcdcd;
}

